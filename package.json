{
  "name": "serverless-todo",
  "version": "1.0.0",
  "description": "A REST API example for simple todo application with Node.js and Serverless Framework",
  "license": "MIT",
  "author": "Walid Karray",
  "scripts": {
    "sls": "sls",
    "lint": "eslint '{src,test}/**/*.ts'",
